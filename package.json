{
  "name": "sftext-utility",
  "displayName": "sftext-utility",
  "description": "Utilities for SFText",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sftext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "sftext",
        "path": "./snippets/snippet.json"
      }
    ],
    "commands": [
      {
        "command": "sftext-utility.helloworld",
        "title": "Hello World"
      },
      {
        "command": "sftext-utility.goodmorning",
        "title": "GoodMorning"
      },
      {
        "command": "sftext-utility.insertArgs",
        "title": "Insert Arguments"
      },
      {
        "command": "sftext-utility.formatCursor",
        "title": "Format Cursor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
